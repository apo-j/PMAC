<div class="friezeBloc col-xs-12">
  <ul>
    <li class="first completed">
      Panier
    </li>
    <li class="completed">
      Livraison</li>
    <li class="completed">
      Récapitulatif            </li>
    <li class="completed">
      Paiement            </li>
    <li class="last progres">
      Confirmation            </li>
  </ul>
</div>

<h4>Détail commande</h4>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Réféfence : <strong><%= @order.name %></strong></h3>
  </div>
  <div class="panel-body">
<table class="col-xs-12 table-striped">
  <thead>
  <tr>
    <th class="text-center">Article(s)</th>
    <th class="text-center">Prix unitaire</th>
    <th class="text-center">Quantité</th>
    <th class="text-center">Prix total</th>
  </tr>
  </thead>
  <tbody>
  <%= render(@order.line_items) %>
  </tbody>
</table>
  </div>
  <div class="panel-footer">
    <div>
      <span style="display: inline-block;margin-right:50px"><strong>Total</strong></span><%= number_to_currency(@order.total_price, unit: "", separator: ",", delimiter: " ") %>€
    </div>
  </div>
</div>

<div class="clearfix"></div>
<br/>
<div style="float:right">
  <%= button_to "Retour à l'acceuil", root_path, class: :"btn btn-primary", method: :get %>
</div>
