<div class="friezeBloc col-xs-12">
  <ul>
    <li class="first completed">
      <a href="/show-cart/">Panier</a>
    </li>
    <li class="completed">
      <a href="/preorder/livraison/">Livraison</a>   </li>
    <li class="progres">
      Récapitulatif            </li>
    <li class="">
      Paiement            </li>
    <li class="last">
      Confirmation            </li>
  </ul>
</div>

<h4>Détail commande</h4>

<div class="panel panel-default">
  <div class="panel-heading">
  </div>
  <div class="panel-body">
    <table class="col-xs-12 table-striped">
      <thead>
      <tr>
        <th class="text-center">Article(s)</th>
        <th class="text-center">Prix unitaire</th>
        <th class="text-center">Quantité</th>
        <th class="text-center">Prix total</th>
      </tr>
      </thead>
      <tbody>
      <%= render(@cart.line_items) %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <div>
      <span style="display: inline-block;margin-right:50px"><strong>Total</strong></span><%= number_to_currency(@cart.total_price, unit: "", separator: ",", delimiter: " ") %>€
    </div>
  </div>
</div>

<div class="clearfix"></div>
<br/>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a href="javascript:void(0)">
          Adresse
        </a>
      </h4>
    </div>
    <div class="panel-collapse collapse in"  id="address-facturation">
      <div class="panel-body">
        <div class="row">
          <div class="col-md-5 pull-left">
            <strong class="pull-left">Adresse de livraison</strong><a class="pull-right original" href="/preorder/livraison/">Modifier</a><br/>
            <%=@livraison.name %> <%=@livraison.last_name %><br/>
            <%=@livraison.address %><br/>
            <%=@livraison.postal %> <%=@livraison.city %><br/>
            Tél : <%=@livraison.telephone %>
          </div>
          <div class="col-md-5 pull-right">
            <strong class="pull-left">Adresse de facturation</strong>&nbsp;<a class="pull-right original" href="/preorder/facturation/">Modifier</a><br/>
            <%=@facturation.name %> <%=@facturation.last_name %><br/>
            <%=@facturation.address %><br/>
            <%=@facturation.postal %> <%=@facturation.city %><br/>
            Tél : <%=@facturation.telephone %>
          </div>
        </div>


      </div>
    </div>
  </div>




<div style="float:right">
  <%= button_to "Continuer", "/preorder/payment/", class: :"btn btn-primary", method: :post %>
</div>
