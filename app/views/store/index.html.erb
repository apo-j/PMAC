<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
    <div class="entry">
      <h3><%= product.title %></h3>
      <%= product.price %>
      <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
    </div>
<% end %>
